<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ phía dưới -->


    <!-- Ô nhập liệu trắng nằm trên bóng -->
    <item android:top="6dp">  <!-- Dịch xuống để tạo hiệu ứng bóng dưới -->
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Màu nền trắng -->
            <corners android:radius="8dp"/>
            <shadowColor android:radius="6dp" android:color="#80000000"/>
            <stroke android:width="1dp" android:color="#D3D3D3"/> <!-- Viền nhẹ -->
        </shape>
    </item>
</layer-list>
