<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/tvMonHoc_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1.4"
        android:background="@drawable/border_cell"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Môn học"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvGK1_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/border_cell"
        android:enabled="true"
        android:gravity="center"
        android:numeric="decimal"
        android:text="GK1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tvCK1_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/border_cell"
        android:enabled="true"
        android:gravity="center"
        android:numeric="decimal"
        android:text="CK1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tvGK2_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/border_cell"
        android:enabled="true"
        android:gravity="center"
        android:numeric="decimal"
        android:text="GK2"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tvCK2_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/border_cell"
        android:enabled="true"
        android:gravity="center"
        android:numeric="decimal"
        android:text="CK2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTBMon_gv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.2"
        android:background="@drawable/border_cell"
        android:gravity="center"
        android:text="Điêm TB"
        android:textSize="14sp" />
</LinearLayout>